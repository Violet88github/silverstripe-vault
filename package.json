{
    "name": "violet88_silverstripe-vault-module",
    "description": "A SilverStripe module for encrypting and decrypting data using the HashiCorp Vault API",
    "main": "./client/src/boot/index.js",
    "author": {
        "name": "RoÃ«l Couwenberg",
        "email": "contact@roelc.me"
    },
    "engines": {
        "node": ">=16.x"
    },
    "scripts": {
        "dev": "npm run development",
        "production": "npm run build",
        "development": "npm run watch"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.4.0",
        "babel-polyfill": "6.7.4",
        "laravel-mix": "^6.0.49",
        "mini-css-extract-plugin": "^2.7.5",
        "react": "^16.8.3",
        "watch": "^1.0.2",
        "webpack": "^5.77.0"
    },
    "devDependencies": {
        "@silverstripe/eslint-config": "^0.0.5",
        "babel-jest": "^23.6.0",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.10.0",
        "jest-cli": "^23.6.0",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.60.0",
        "sass-loader": "^12.6.0",
        "webpack-cli": "^5.0.1"
    },
    "babel": {
        "presets": [
            "env",
            "react"
        ],
        "plugins": [
            "transform-object-rest-spread"
        ]
    },
    "jest": {
        "roots": [
            "client/src"
        ],
        "modulePaths": [
            "client/src",
            "../admin/client/src",
            "../admin/node_modules",
            "../silverstripe/admin/client/src",
            "../silverstripe/admin/node_modules",
            "../../silverstripe/admin/client/src",
            "../../silverstripe/admin/node_modules"
        ],
        "collectCoverageFrom": [
            "**/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/boot/**",
            "!**/bundles/**",
            "!**/legacy/**",
            "!**/vendor/**",
            "!**/*-test.{js,jsx}",
            "!**/*-story.{js,jsx}"
        ],
        "testMatch": [
            "**/tests/**/*-test.js?(x)"
        ],
        "transform": {
            ".*": "babel-jest"
        }
    }
}
